pipeline {
    agent any

    tools {
        nodejs 'NodeJS 20' // Adjust version as per your Jenkins configuration
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    sh 'npm ci'
                }
            }
        }

        stage('Lint & Test') {
            steps {
                dir('frontend') {
                    sh 'npm run lint'
                    // sh 'npm test' // Uncomment if tests are available
                }
            }
        }

        stage('Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('frontend') {
                    script {
                        docker.build("rhine-frontend:${env.BUILD_ID}")
                    }
                }
            }
        }
    }
}
